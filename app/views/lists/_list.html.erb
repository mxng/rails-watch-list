<div class="col-6 col-lg-3">
  <%= link_to list do %>
    <div class="card my-3 h-auto">
      <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill, class: "card-img" %>
      <div class="card-body">
        <h3 class="text-center"><%= list.name %></h3>
        <% list_path(list) %>
      </div>
    </div>
  <% end %>
</div>
